---
import TwitterIcon from "../icons/Twitter.astro";

type Props = {
  description?: string;
  via?: string;
};

const { description, via } = Astro.props;

let URL = `https://twitter.com/intent/tweet?url=${Astro.request.url}`;

if (description) URL += `&text=${description}`;
if (via) URL += `&via=${via}`;
---

<a
  class="social-share-btn"
  target="_blank"
  href={URL}
  rel="noopener noreferrer"
>
  <TwitterIcon class="text-slate-800 dark:text-gray-300" />
</a>

<style>
  a {
    margin-right: 10px;
  }
  svg:hover {
    fill: #94a3b8;
  }
</style>
